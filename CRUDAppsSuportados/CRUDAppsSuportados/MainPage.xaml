<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CRUDAppsSuportados.MainPage">

    <ScrollView>
        <VerticalStackLayout>
            <VerticalStackLayout>
                <Entry x:Name="NomeEntry" Placeholder="Digite o nome"></Entry>
                <Entry x:Name="DescEntry" Placeholder="Digite a descricao"></Entry>
                <Entry x:Name="RefEntry" Placeholder="Digite a referencia"></Entry>
                <Entry x:Name="SitEntry" Placeholder="Digite a situacao"></Entry>

                <Button Clicked="Button_Clicked" Text="Adicionar App"></Button>
            </VerticalStackLayout>

            <VerticalStackLayout>

                <CollectionView ItemsSource="{Binding Apps}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <VerticalStackLayout Padding="10" Spacing="5">
                                <Label Text="{Binding Id}" FontSize="20" />
                                <Label Text="{Binding Nome}" FontSize="20" />
                                <Label Text="{Binding Descricao}" FontSize="20" />
                                <Label Text="{Binding Referencia}" FontSize="20" />
                                <Label Text="{Binding Situacao}" FontSize="20"/>
                            </VerticalStackLayout>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>
            
        </VerticalStackLayout>

        
    </ScrollView>

</ContentPage>
