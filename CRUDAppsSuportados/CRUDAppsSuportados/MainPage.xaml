<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CRUDAppsSuportados.MainPage">

    <ScrollView>
        <VerticalStackLayout>
            <VerticalStackLayout>
                <Entry x:Name="NomeEntry" Placeholder="Digite o nome"></Entry>
                <Entry x:Name="DescEntry" Placeholder="Digite a descricao"></Entry>
                <Entry x:Name="RefEntry" Placeholder="Digite a referencia"></Entry>
                <Entry x:Name="SitEntry" Placeholder="Digite a situacao"></Entry>

                <Button Clicked="Button_Clicked" Text="Adicionar App"></Button>
            </VerticalStackLayout>

            <VerticalStackLayout>

                <CollectionView ItemsSource="{Binding Textos}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Label Text="{Binding .}" FontSize="20" Padding="10"/>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>
            
        </VerticalStackLayout>

        
    </ScrollView>

</ContentPage>
